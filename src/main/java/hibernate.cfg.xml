<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.password">Andrew@05</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/basicinheritance</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property><!-- this makes it so that we can see the sql queries that hibernate is making in the console -->
        <property name="hibernate.format_sql">true</property>
        
        <mapping class="com.andrew.BasicInheritance.Customer" />
        <mapping class="com.andrew.BasicInheritance.BoACustomer" />
        <mapping class="com.andrew.BasicInheritance.ChaseCustomer" />
        <mapping class="com.andrew.BasicInheritance.Bank" />
        <mapping class="com.andrew.BasicInheritance.BoABank" />
        <mapping class="com.andrew.BasicInheritance.ChaseBank" />
        <mapping class="com.andrew.BasicInheritance.Account" />
        <mapping class="com.andrew.BasicInheritance.BoAAccount" />
        <mapping class="com.andrew.BasicInheritance.ChaseAccount" />
        <mapping class="com.andrew.BasicInheritance.Purchase" />
        <mapping class="com.andrew.BasicInheritance.BoAPurchase" />
        <mapping class="com.andrew.BasicInheritance.ChasePurchase" />
        
        
    </session-factory>
</hibernate-configuration>
